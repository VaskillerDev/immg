{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "typeRoots": [
      "./node_modules/@types/node"
    ],
    
    /* Dirs */
    "outDir": "dist/",
    "rootDir": ".",
    "rootDirs": ["src/types/*", "src/utils/*"],

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist"]
}
