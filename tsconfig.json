{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["node"],
    
    /* Dirs */
    "outDir": "dist/",
    "rootDir": ".",
    "rootDirs": ["src/types/*", "src/utils/*"],
    
    "typeRoots": ["./node_modules/@types/node"],
    
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","dist"],
}
